@using Malina.BLL.VIewModels.Slider
@model SliderCreateViewModel
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create category</h4>
                <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Image">Name</label>
                        <input asp-for="Image" class="form-control" placeholder="Name" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SliderName">Slider Name</label>
                        <input asp-for="SliderName" class="form-control" placeholder="Slider Name">
                        <span asp-validation-for="SliderName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                  
                    @*<div class="form-group">
                    <label asp-for="ButtonUrl">ButtonUrl</label>
                    <input asp-for="ButtonUrl" class="form-control" placeholder="ButtonUrl">
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                    </div>*@

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>